{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "LD_PRELOAD": "/usr/lib/x86_64-linux-gnu/libstdc++.so.6",
                "LIBGL_DEBUG": "verbose",
                "LIBGL_DRIVERS_PATH": "/usr/lib/x86_64-linux-gnu/dri",
                "LD_LIBRARY_PATH": "/usr/lib/x86_64-linux-gnu",
                "QT_QPA_PLATFORM": "xcb"
            }
        }
    ]
}
